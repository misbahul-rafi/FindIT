<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    android:id="@+id/cardItem"
    app:cardElevation="8dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nameItemView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Barang"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/placeItemView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tempat Ditemukan"
            android:textSize="10dp"/>
        <TextView
            android:id="@+id/messegeItemView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pesan untuk pemilik / penerima"
            android:textSize="12dp"/>
        <Button
            android:id="@+id/reportItemView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hubungi Penemu"
            android:textSize="14dp"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="130dp"
        android:id="@+id/imageView"
        android:layout_height="match_parent"
        />

</LinearLayout>


</androidx.cardview.widget.CardView>